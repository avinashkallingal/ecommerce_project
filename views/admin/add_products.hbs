                <div class="block">
                  <div class="title"><strong>Add Products</strong></div>
                  <div class="block-body">

                    <form action="/admin/add_products/save" class="form-horizontal" method="post" enctype="multipart/form-data">
                      <!-- product name -->
                      <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Product Name</label>
                        <div class="col-sm-9">
                          <input name="productname" type="text" class="form-control" required>
                        </div>
                      </div>

                      <div class="line"></div>

                      <!-- discription -->
                      <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Description</label>
                        <div class="col-sm-9">
                          <input name="description" type="text"  class="form-control" required><small class="help-block-none">product details in 50 words</small>
                        </div>
                      </div>

                      <div class="line"></div>                   


                      <!-- price -->
                      <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Price</label>
                        <div class="col-sm-9">                        
                          <div class="form-group">
                            <div class="input-group">
                              <input name="price" type="text" class="form-control" required>
                              <div class="input-group-append">
                                <div class="input-group-append"><span class="input-group-text">/Rs</span></div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>

                      <div class="line"></div>  

                      <!-- categery -->
                      <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Category</label>
                        <div class="col-sm-9">
                          <select name="category" class="form-control text-light bg-dark mb-3 mb-3" required>
                            {{#each category}}
                            <option >{{this.category}}</option>
                            {{!-- <option>Fruit</option>
                            <option>Bread</option> --}}
                            {{/each}}
                          </select>
                        </div>
                     
                      </div>


                     <div class="line"></div>
                      
                        <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Stock</label>
                        <div class="col-sm-9">
                          <input name="stock" type="text"  class="form-control" required>
                        </div>
                      </div>


                      <div class="line"></div>

                      <!-- image add -->
                      <div class="form-group row">
                        <label class="col-sm-3 form-control-label">Add images</label>
                        <div class="col-sm-9">
                        
                          <div class="form-group">
                            <div class="input-group">
                              <input name="image" type="file" class="form-control" placeholder="you can add multiple images" multiple required>
                              <div class="input-group-append">
                               
                               
                                
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>

                   
                      
                      <div class="line"></div>

                      <!-- button -->
                      <div class="form-group row">
                        <div class="col-sm-9 ml-auto">
                          <a href="/admin/productlist" class="btn btn-secondary"> Cancel </a>
                          {{!-- <button  type="cancel" onclick="/admin/productlist" class="btn btn-secondary">Cancel</button> --}}
                          <button type="submit" class="btn btn-primary">Save</button>
                        </div>
